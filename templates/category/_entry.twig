{% extends "index.twig" %}

{% block main %}
    <div class="container">
    	{% set boxes = 	craft.entries.section('boxes').relatedTo(category).all() %}

        <div class="grid">
            {% for box in boxes %}
                <div class="grid-item">
                    <div class="center">
                        <h2>{{ box.title }}</h2>
                        <p>{{ box.boxSubtitle }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="slider">
            {% for box in boxes %}
                <div class="slider-item">
                    <div class="center">
                        <h2>{{ box.title }}</h2>
                        <p>{{ box.boxSubtitle }}</p>
                    </div>
                </div>
            {% endfor %}
            <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
            <a class="next" onclick="plusSlides(1)">&#10095;</a>
        </div>
    </div>

{% endblock %}
